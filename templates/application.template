                - "yum update -y\n"
                - "/opt/aws/bin/cfn-init -v "
                - "         --stack "
                -
                  Ref: "AWS::StackName"
                - "         --resource rAutoScalingConfigApp "
                - "         --configsets wordpress_install "
                - "         --region "
                -
                  Ref: "AWS::Region"

                  Ref: "AWS::Region"
                - "\n"
                - "echo Self-destruct!\n"
                - "aws ec2 terminate-instances --instance-id $(curl -s http://169.254.169.254/latest/meta-data/instance-id) --region "
                -
                  Ref: "AWS::Region"
                - "\n"
                - "echo *** ELB HTTPS configuration complete ***\n"
        Tags:
          -
            Key: "Name"
            Value: "PostProcessor"
